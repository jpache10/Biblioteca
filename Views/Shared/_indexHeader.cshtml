@model string 

@{
    ViewData["Title"] = "Index";
}

<h1 class="title_main">@Model</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="text-mute text-decoration-none text-secondary" asp-area="" asp-controller="Home" asp-action="Index">
                Dashboard
            </a>
        </li>
        <li class="breadcrumb-item fw-bolder active" aria-current="page">@Model</li>
    </ol>
</nav>

<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-outline-primary bg-white text-primary text-uppercase fst-italic" asp-action="Create">
            <img class="iconos-sm" src="/images/icon_plus.svg" alt="Icono plus" /> 
            <span class="p-1">Crear @Model</span>
        </a>
        <form asp-action="Index" class="d-flex" method="get">
            <input type="search" name="searchString" class="form-control rounded" placeholder="âŒ• Buscar..." aria-label="Search" value="@ViewData["CurrentFilter"]" />
        </form>
    </div>
</div>
