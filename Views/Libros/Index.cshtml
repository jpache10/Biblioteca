@model IEnumerable<Biblioteca.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignaturaTopografica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnioPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoresNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CienciaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditoraNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdiomaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoBibliografiaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignaturaTopografica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnioPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoresNavigation.Identificador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CienciaNavigation.Identificador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditoraNavigation.Identificador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdiomaNavigation.Identificador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoBibliografiaNavigation.Identificador)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Identificador">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Identificador">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Identificador">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
