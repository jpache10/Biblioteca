@model Biblioteca.Models.Idioma

@{
    ViewData["Title"] = "Editar Idioma";
}


<h1 class="title_main">Detalles Idioma</h1>

<div class="mt-4">
    <form class="row g-3" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Identificador" />
        <div class="col-7 form-group">
            <label asp-for="Descripcion" class="control-label fw-bold"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-check form-switch ms-2">
            <label class="form-check-label" for="flexSwitchCheckEstado">@Html.DisplayNameFor(model =>
                model.Estado)</label>
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckEstado" asp-for="Estado" />
        </div>

        <div class="row row-cols-2 justify-content-start form-group mt-5">
            <div class="col-1">
                <button class="btn btn-primary" type="submit">Editar</button>
            </div>
            <div class="col-1">
                <a class="btn btn-light bg-white text-dark border border-dark" asp-action="Index">Regresar</a>
            </div>
        </div>
    </form>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
